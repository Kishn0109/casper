<script src="{{asset "built/casper.js"}}"></script>
<script>
$(document).ready(function () {
    // Mobile Menu Trigger
    $('.gh-burger').click(function () {
        $('body').toggleClass('gh-head-open');
    });
    // FitVids - Makes video embeds responsive
    $(".gh-content").fitVids();
});
document.getElementById("close-btn").addEventListener('click',function (){
    console.log("clicked on the btn");
    let navigationLinkWraper =document.getElementsByClassName("navigation-link-wraper")[0];

    //if(navigationLinkWraper.classList.add)
    navigationLinkWraper.classList.add("hide-sidebar")
    console.log(navigationLinkWraper)
})

document.getElementById("hamburger-menu").addEventListener('click',function (){
    let navigationLinkWraper =document.getElementsByClassName("navigation-link-wraper")[0];
    let hamburgerMenuButton=document.getElementById("hamburger-menu")
    if(navigationLinkWraper.classList.contains("hide-sidebar")){ // we need to show sidebar
        navigationLinkWraper.classList.remove("hide-sidebar");
        navigationLinkWraper.classList.add("show-sidebar");
        
        hamburgerMenuButton.classList.add("active");

    }else{ //we need to hide sidebar 
        navigationLinkWraper.classList.add("hide-sidebar")
        navigationLinkWraper.classList.remove("show-sidebar");

        // we need to make hamburger menu as cross icon
        

        hamburgerMenuButton.classList.remove("active");
    }
})
</script>

